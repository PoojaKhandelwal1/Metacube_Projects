<apex:page standardStylesheets="false" showChat="false" showHeader="false" sidebar="false" docType="html-5.0" controller="GlobalController">
		<!-- <apex:stylesheet value="{!Application}/css/AddAttachment.css"/>  -->
         <div id="AddAttachmentPopup" class="modal fade addAttachmentPopup">
	    	<div class="modal-dialog edit_modal-dialog" >
	        	<div class="modal-content">
	            	<div class="modal-body popup_container">
	                	<div class="popupinside"> 
		                	<div class="popupright leftBorderNone addAttachmentWrapper col-md-12 "> <!-- leftBorderNone -->
			                	<div class="right_heading_container col-lg-12 col-md-12">
			                		<h1 class="right_panel_heading">Add Attachments</h1>
			                	</div>
			                	<div class="tabconainer addCOUWrapper" >  
		                        	<div class="dropletcontainer" >
	                                    <section class="col-md-12 browse_section P0" >
	                                        <section class="droplet smalldroplet"  >
	                                            <droplet class ="browse_droplet" ng-model="FileUpload.interface" ng-class="{'uploading' : FileUpload.interface.isUploading() }">
	                                                <div class="col-md-12">
		                                                <p class="T1 drag-container">
		                                                    Drop files here to upload, or
		                                                    <div class ="browse_but">
		                                                        <!-- <label for="files" style="max-width: 112px;"> -->
		                                                            <droplet-upload-single ng-model="FileUpload.interface" service-model ="AddAttachment.sectionName"><!-- style="height: 0;position: absolute;height: 30px;padding-left: 95px;padding-top: 0px; margin: 11px; width: 93px; opacity:0; outline: none; margin-left:0;" -->
		                                                            </droplet-upload-single><!-- service-model ="CustomerOrderModel.SelectedSection.Name"  -->
		                                                            <span class="btn browse_but1">Browse</span>
		                                                        <!-- </label> --> 
		                                                    </div>
		                                                </p> 
	                                                </div>
	                                                <div class="col-md-12 maxFileSize">
	                                                	<!-- <p class="T7">Maximum 20mb files</p> -->
	                                                </div>
	                                            </droplet>
	                                        </section>
	                                    </section>
	                                </div>
	                                <!-- <table class="table attachmentsList" id="" ng-show="CustomerOrderModel.SOHeaderList[AddAttachment.index].AttachmentList.length > 0">
										<col width="2%"/>
	                                    <col width="70%"/>
	                                    <col width="25%"/>
	                                    <col width="2%"/>
	                                    <tbody ng-repeat="Attachment in CustomerOrderModel.SOHeaderList[AddAttachment.index].AttachmentList">
		                                    <tr class="clickable_row" id="row1" rel="">
		                                        <td style="background:#fff"></td>
		                                        <td><a href="/servlet/servlet.FileDownload?file={{Attachment.AttachmentId}}" target="_blank">{{Attachment.AttachmentName}} </a></td>
		                                        <td><button class="btn btn-default grayBtn closeBtn" type="button"><i class="fa fa-times"></i></button></td>
		                                        <td style="background:#fff"></td>
		                                    </tr>
		                                </tbody>
	                                </table> -->
	                                <div class="col-md-12 attachmentsList" ng-show=" FileUpload.fileToBeUploaded != undefined && FileUpload.fileToBeUploaded != null && FileUpload.fileToBeUploaded != '' ">
	                                	<div class="col-md-10 attachmentName">{{FileUpload.fileToBeUploaded.name}}</div>
	                                	<div class="col-md-2 removeAttachment">
	                                		<button class="btn btn-default grayBtn closeBtn pull-right" type="button" ng-click="AddAttachment.removeAttachmentFile()"><i class="fa fa-times"></i></button>
	                                	</div>
	                                </div>
		                        </div>
		                        <div class="right_heading_container col-lg-12 col-md-12">
			                        <div class="savecancle_btncntnr pull-right">
			                            <button type="button" id="closemodal" class="btn btn-default grayBtn" ng-click = "AddAttachment.cancelAddAttachmentPopup()">{!$Label.Cancel_Label}</button>
			                            <button type="button" class="btn btn-default greenBtn" 
			                            ng-disabled="FileUpload.fileToBeUploaded == undefined || FileUpload.fileToBeUploaded == null || FileUpload.fileToBeUploaded == ''" 
			                            ng-click = "AddAttachment.uploadAttachmentFile()">Upload</button>
			                        </div>
		                        </div>
	                		</div>
		            	</div>
	            	</div>
	        	</div>
	    	</div>
		</div>
</apex:page>