                            }
                            exportRecObj[colName] = (exportRecObj[colName] == 'null' || exportRecObj[colName] == null) ? '' : exportRecObj[colName];
                        });
                        $scope.PreviewPage.exportData.push(exportRecObj);
                        $scope.PreviewPage.exportData.push(exportRecObjEmpty);
