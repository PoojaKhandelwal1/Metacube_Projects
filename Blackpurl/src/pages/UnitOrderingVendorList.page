<apex:page standardStylesheets="false" showChat="false" showHeader="false" sidebar="false" docType="html-5.0" controller="GlobalController">
	<div class="fadein" ui-view="UnitOrderingChildView" autoscroll='false'></div>
	<div class="GroupSummaryWrapper">
   		<h2 class="pageInfo">{{ 'List_of_active_unit_vendors' | translate }}</h2>
   		<div class="bp-boxes">
   			<div class="row">
   				<div class="col-xs-12 col-sm-4 col-md-3" ng-repeat="vendor in M_UO.vendorsList | orderBy: 'VendorName'">
   					<div class="bp-box">
						<div class="icon-area unitOrderVendorInfo">
                        	<span class="icon"><i ng-include="'{!Application_Images}/Icons/vendor.svg'" class="white"></i></span>
                        </div>	            						
						<div class="info-area">
                            <div class="name">{{vendor.VendorName}}</div>
                            <div class="detail">{{vendor.UnitCount}} {{ 'unit_Label' | translate }}<span class = "text-lowercase" ng-if="vendor.UnitCount > 1">{{ 'S' | translate }}</span> {{ 'on_order' | translate }}</div>
                        </div>	            						
                        <div class="overlay">
                            <button class="btn btn-gray-bordered" ng-click="F_UO.MoveToState('UnitOrdering.ViewVendorOrderUnits', {'vendorId': vendor.VendorId});">{{ 'VIEW' | translate }}</button>
                            <button class="btn bp-btn-normal" ng-show="GroupOnlyPermissions['Unit ordering']['create/modify']" 
                            ng-click="F_UO.MoveToState('UnitOrdering.AddeditUnitOrder', {'vendorId': vendor.VendorId})">{{ 'ORDER_UNIT' | translate }}</button>
                        </div>	            						
   					</div>
   				</div>
   				<div class="col-xs-12 col-sm-4 col-md-3" ng-click = "F_UO.openAddEditUnitOrder()" ng-show="GroupOnlyPermissions['Unit ordering']['create/modify']">
   					<div class="bp-box add-new-box">
						<div class="icon-area">
                        	<span class="icon"><i ng-click="F_UO.selectVendor()" ng-include="'{!Application_Images}/Icons/add-circle.svg'" class="gray_979797_Width"></i></span>
                        </div>	            						
						<div class="info-area">
                            <div class="name">{{ 'ADD_AN_EXISTING_VENDOR_TO_UNIT_ORDERING' | translate }}</div>
                        </div>	            						
   					</div>
   				</div>	            					            				
   			</div>
   		</div>
	</div>
</apex:page>