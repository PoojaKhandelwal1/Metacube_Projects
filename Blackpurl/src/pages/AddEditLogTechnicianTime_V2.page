<apex:page standardStylesheets="false" showChat="false" showHeader="false" sidebar="false" docType="html-5.0" controller="GlobalController">
    <!-- <apex:stylesheet value="{!Application}/css/AddEditLogTechnicianTime_V2.css"/>
    <apex:stylesheet value="{!Application}/css/MiniCalendar.css"/>  -->
    <div class="modal fade-scale bp-model-dialog bs-example-modal-lg logTechnicianTimeModal" id = "logTechnicianTimeModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="logTechnicianTimeContent">
                <h2 class="heading text-uppercase">{{ 'Log_technician_time' | translate }}</h2>
                <button type="button" class="btn btn-default modal-close-btn" data-dismiss="modal">
                    <i ng-include="'{!Application_Images}/Icons/close.svg'" class="white_FFF" ng-click="F_AddEditLTT.hideLogTechnicianTimeModal()"></i>
                </button>                   
                <form>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label>{{ 'Technician' | translate }}</label>
                                <div class="col-xs-12 P0 technicianNameSelectableDropdown">
	                                <div class="bp-cell bp-unitSearch-area  searchInputArea selectableDropdown" ng-class="{'showingOverlay' : M_AddEditLTT.DropDownFocusId == 'technician'}">
	                                    <input type="text" id="technicianInput" class="searchInput bp-input-text" placeholder="Please select"
	                                       name="technicianInput"
	                                       ng-focus="M_AddEditLTT.DropDownFocusId = 'technician'"
	                                       ng-blur="M_AddEditLTT.DropDownFocusId = ''"
	                                       ng-keyup=""  
	                                       ng-model="M_AddEditLTT.HourLogModel.EmployeeName" readonly="readonly" ng-disabled=""/>
	                                    <i ng-include="'{!Application_Images}/Icons/arrowDown.svg'" class="bp-blue downArrow" ng-click="F_AddEditLTT.setFocusOnElement('technicianInput')"></i>
	                                    
	                                    <div class="searchResultOverlay" id="autocompleteScrollDiv">
	                                       <ul>
	                                          <li ng-repeat="technician in M_AddEditLTT.TechnicianList"
	                                             ng-class=""
	                                             ng-mousedown="F_AddEditLTT.selectTechnician($index)" >
	                                             <div class="fullName">{{technician.TechinicianName}}</div>
	                                          </li>
	                                       </ul>
	                                    </div>
	                                 </div>
	                            </div>
                                                    
                            </div>                      
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>{{ 'Label_Date' | translate }}</label>
                                <input type="text"  id="startDate_Id" style="background: #FFF;position: initial;" ui-date="M_AddEditLTT.dateOptions" 
                                     ui-date-format="{{M_AddEditLTT.dateFormat}}" 
                                     class="bp-input-text  datePickerColor datepicker jobclockingcalenderDateTextBox"
                                     ng-model = "M_AddEditLTT.HourLogModel.StartDate" placeholder="Start Date" readonly="readonly"/> 
                                     <i ng-include="'{!Application_Images}/Icons/calendar-filled.svg'" class="jobclockingcalendericon grey_DDDDDD"
                                        ng-click = "F_AddEditLTT.setFocusOnElement('startDate_Id')">
                                     </i>
                            </div>                      
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>{{ 'In' | translate }}</label>
                                <input type="text" class="bp-input-text" placeholder="ie: 10:00AM" ng-model = "M_AddEditLTT.HourLogModel.TimeIn"
                                    ng-blur="F_AddEditLTT.calculateTotalHours('TimeIn')"/>
                            </div>                      
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>{{ 'Out' | translate }}</label>
                                <input type="text" class="bp-input-text" placeholder="ie: 5:00PM" ng-model = "M_AddEditLTT.HourLogModel.TimeOut"
                                    ng-blur="F_AddEditLTT.calculateTotalHours('TimeOut')"/>
                            </div>                      
                        </div>                  
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <textarea class="bp-input-text" placeholder="Add notes" ng-model = "M_AddEditLTT.HourLogModel.Notes"></textarea>
                            </div>                      
                        </div>
                    </div>              
                    <div class="row">
                        <div class="col-xs-6">
                            <label class="label-inline">{{ 'Hours_logged' | translate }}</label><span class="logged-time bp-semibold-font bp-light-blue1-font">{{M_AddEditLTT.HourLogModel.TotalHours}}</span>
                        </div>
                        <div class="col-xs-6">
                            <button ng-if="!M_AddEditLTT.isEditMode" class="btn bp-btn-normal btn-log-time text-uppercase" ng-disabled="F_AddEditLTT.disablesaveHourLogBtn()" ng-click="F_AddEditLTT.saveHourLogData()"
                            ng-class="{'disable': F_AddEditLTT.disablesaveHourLogBtn()}">{{ 'Log_time' | translate }}</button>   
                            
                            <button ng-if="M_AddEditLTT.isEditMode" class="btn bp-btn-normal btn-log-time text-uppercase" ng-disabled="F_AddEditLTT.disablesaveHourLogBtn()" ng-click="F_AddEditLTT.saveHourLogData()"
                            ng-class="{'disable': F_AddEditLTT.disablesaveHourLogBtn()}">{{ 'Save_Label' | translate }}</button> 
                        </div>
                    </div>
                </form>
            </div>
          
        </div>
      </div>
    </div>    
    
</apex:page>