<apex:page standardStylesheets="false" showChat="false" showHeader="false" sidebar="false" docType="html-5.0"  controller="GlobalController">
        <!-- <apex:stylesheet value="{!Application}/css/AddUnitPriceAndCost.css"/> -->
  <div>
   	<route-loading-indicator></route-loading-indicator>
   	<div ng-if="!isRouteLoading" ng-cloak="ng-cloak"> 
    <div id="AddUnitPriceAndCost" class="modal fade AddUnitPriceAndCost">
       <div class="modal-dialog edit_modal-dialog" >
          <div class="modal-content"> 
             <div class="modal-body popup_container"> 
                <div class="popupinside"> 
                    <div class="popupright addunitWrapper leftBorderNone col-md-12 col-md-12 ">
                        <div class="right_heading_container col-lg-12 col-md-12">
                            <h1 class="right_panel_heading">{{'Add_Adjustment'| translate }}</h1>  <!-- Add Unit Price &amp; Cost Item  by kajal 26th april, 2017 #1939 -->
                            <div class="savecancle_btncntnr">
                                <button type="button" id="closemodal" class="btn btn-default grayBtn" ng-click = "addUnitPriceAndCost.cancelUnitPriceCostForm()" tab-index="{{addUnitPriceAndCost.tabIndexValue + 8}}">{{'Cancel_Label'| translate }}</button>
                                <button type="button" class="btn btn-default greenBtn" ng-click = "addUnitPriceAndCost.saveUnitPriceCostForm()" ng-disabled="addUnitPriceAndCost.disableSaveButton" tab-index="{{addUnitPriceAndCost.tabIndexValue + 7}}">{{'Save_Label'| translate }}</button>
                            </div>
                        </div>
                        <div class="tabconainer noborder addCOUWrapper" style="border-top: 1px solid #cccccc;">
                            <form>
                                
                                <!-- START: type field -->
                                    <!-- by kajal 26th april, 2017 #1939 -->
                                    <div class="clearfix"></div>
                                    <div class="option_field">
                                        <div class="form_fields pull-left ">
                                            <div class="form-group large">
                                                <label for="exampleInputModel" class="control-label">{{'Label_Type'| translate }}</label>
                                               <select class="form-control haff-form-control1" placeholder="{{'Label_Type'| translate }}" 
                                                ng-model="addUnitPriceAndCost.unitPriceCostItemTypeSelected"
                                                ng-options="i.Value as i.Value for i in addUnitPriceAndCost.unitPriceCostItemType"
                                                ng-change = "addUnitPriceAndCost.changeUnitpriceCostItemType($index)"
                                                tab-index="{{addUnitPriceAndCost.tabIndexValue + 1}}"
                                                rel="unitPriceCostType">
                                                </select> 
                                            </div>
                                            <div class=" controls" id="unitPriceCostType">
                                                <i class="fa fa-question-circle" data-toggle="tooltip" title="{{addUnitPriceAndCost.helpText['Type']}}"></i>
                                                <i class="fa fa-times" ng-click="addUnitPriceAndCost.clearFields('Type')"></i>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <!-- by kajal 26th april, 2017 #1939 -->
                                    <!-- END: type field -->
                                
                                <!-- START: Description field -->
                                    <div class="clearfix"></div>
                                    <div class="option_field">
                                        <div class="form_fields pull-left ">
                                            <div class="form-group descWidth large required">
                                                <label for="exampleInputModel" class="control-label">{{'Part_Object_Item_Description'| translate }}<span class="FC9">*</span></label>
                                                <input type="text" class="form-control"
                                                    id="ItemDescription" placeholder="{{'PriceLevelGrid_Description'| translate }}"
                                                    rel="unitPriceCostItemDescription" maxlength="255"
                                                    ng-model="addUnitPriceAndCost.unitPriceAndCostRec.ItemDescription"
                                                    ng-blur="addUnitPriceAndCost.validateFieldWithKey('ItemDescription')"
                                                    ng-class="{'redborderError' : addUnitPriceAndCost.UnitPriceCostFormValidationModal['ItemDescription']['isError'] == true}"
                                                    data-toggle="tooltip"
                                                    title="{{addUnitPriceAndCost.UnitPriceCostFormValidationModal['ItemDescription']['ErrorMessage']}}"
                                                    tab-index="{{addUnitPriceAndCost.tabIndexValue + 2}}"
                                                    ng-focus="addUnitPriceAndCost.formFieldJustGotFocus('unitPriceCostItemDescription')" />    
                                            </div>
                                            <div class=" controls" id="unitPriceCostItemDescription">
                                                <i class="fa fa-question-circle" data-toggle="tooltip" title="{{addUnitPriceAndCost.helpText['ItemDescription']}}"></i>
                                                <i class="fa fa-times" ng-click="addUnitPriceAndCost.clearFields('ItemDescription')"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END: Description field -->

                                    <!-- START: Prices field -->
                                    <div class="clearfix"></div>
                                    <div class="option_field">
                                        <div class="form_fields pull-left ">
                                            <div class="form-group large">
                                                <label for="exampleInputModel" class="control-label text-capitalize">{{'TOTAL_PRICE'| translate }}</label>
                                                    <div class="form-group midnew2 pricefiled">
                                                        <span class="currency">
                                                          {{'Currency_Symbol'| translate }}
                                                        </span>
                                                        <price-only-input id-value="TotalPrice"
                                                        class-value="form-control " 
                                                        max-length="15" precision-length="2"
                                                        errorclass="addUnitPriceAndCost.UnitPriceCostFormValidationModal"
                                                        input-value="addUnitPriceAndCost.unitPriceAndCostRec.TotalPrice"
                                                        validation-modal="addUnitPriceAndCost.UnitPriceCostFormValidationModal"
                                                        validation-modal-key="TotalPrice" input-model="addUnitPriceAndCost"
                                                        tab-index="{{addUnitPriceAndCost.tabIndexValue + 3}}"
                                                        rel-value="unitPriceCostTotalPrice" allow-negative ="true"/><!-- haff-form-control place-holder-value="Total Price" -->
                                                    </div>
                                            </div>
                                            <div class=" controls" id="unitPriceCostTotalPrice">
                                                <i class="fa fa-question-circle" data-toggle="tooltip" title="{{addUnitPriceAndCost.helpText['TotalPrice']}}"></i>
                                                <i class="fa fa-times" ng-click="addUnitPriceAndCost.clearFields('TotalPrice')"></i>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- END: Prices field -->
                                    
                                    <!-- START: Cost field -->
                                    <div class="clearfix"></div>
                                    <div class="option_field" ng-show="GroupOnlyPermissions.Costs['modify']"> 
                                        <div class="form_fields pull-left ">
                                            <div class="form-group large">
                                                <label for="exampleInputModel" class="control-label">{{'Total_Cost'| translate }}</label>
                                                <div class="form-group midnew2 pricefiled">
                                                    <span class="currency">
                                                        {{'Currency_Symbol'| translate }}
                                                    </span>
                                                    <price-only-input id-value="TotalCost"
                                                        class-value="form-control "
                                                        max-length="15" precision-length="2"
                                                        errorclass="addUnitPriceAndCost.UnitPriceCostFormValidationModal"
                                                        input-value="addUnitPriceAndCost.unitPriceAndCostRec.TotalCost"
                                                        validation-modal="addUnitPriceAndCost.UnitPriceCostFormValidationModal"
                                                        validation-modal-key="TotalCost" input-model="addUnitPriceAndCost"
                                                        tab-index="{{addUnitPriceAndCost.tabIndexValue + 4}}"
                                                        rel-value="unitPriceCostTotalCost"  allow-negative ="true"/> <!-- haff-form-control place-holder-value="Total Cost" -->
                                                 </div> 
                                            </div>
                                            <div class="controls" id="unitPriceCostTotalCost">
                                                <i class="fa fa-question-circle" data-toggle="tooltip" title="{{addUnitPriceAndCost.helpText['TotalCost']}}"></i>
                                                <i class="fa fa-times" ng-click="addUnitPriceAndCost.clearFields('TotalCost')"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END: Cost field -->
                            </form>
                        </div>
                        <div class="right_heading_container col-lg-12 col-md-12">
                         <div class="savecancle_btncntnr pull-right">
                            <button type="button" id="closemodal" class="btn btn-default grayBtn" ng-click = "addUnitPriceAndCost.cancelUnitPriceCostForm()" tab-index="{{addUnitPriceAndCost.tabIndexValue + 6}}">{{'Cancel_Label'| translate }}</button>
                            <button type="button" class="btn btn-default greenBtn" ng-click = "addUnitPriceAndCost.saveUnitPriceCostForm()" ng-disabled="addUnitPriceAndCost.disableSaveButton" tab-index="{{addUnitPriceAndCost.tabIndexValue + 5}}">{{'Save_Label'| translate }}</button>
                         </div>
                      </div>
                </div>
               </div>
             </div>
          </div>
       </div>
    </div>
    </div>
     </div>
</apex:page>