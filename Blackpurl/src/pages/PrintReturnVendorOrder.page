<apex:page standardStylesheets="false" showChat="false" showHeader="false" sidebar="false" applyBodyTag="false" applyHtmlTag="false" Controller="PrintReturnVendorOrderCtrl" renderAs="pdf" >
    <html>
        <head>
            <style type="text/css" media="print">
                @page {
                    size: A3;
                    counter-increment: pages;
                    padding-top:350px;
                    @top-left {
                        content: element(header);
                    }
                    @bottom-left {
                        content: element(footer);
                    }
                }
                
                 div.header { 
                    padding:10px;
                    position: running(header);
                }
                
                div.footer {
                    display: block;
                    padding: 5px;
                    position: running(footer);
                }
                .pagenumber:before {
                    content: counter(page);
                }
                 
                .pagecount:before {
                    content: counter(pages);
                }
            </style>
        </head>
        <body>
        <div class="header">
            <div style="float: left !important; width :1000px !important; height: 170px;"><!-- height: 150px; edited by kajal 20th april, 2017 #1908 -->
                <div style="float: left !important; width :170px !important;display:{!if(ISBLANK(companyLogoURL),'none','block')};"><!-- width :200px !important;, display added by kajal 20th april, 2017 #1908 -->
                    <img src="{!companyLogoURL}" height="155.8px;" width="155.8px;" style="margin-top:15px;" /> <!-- height="80px;" width="180px;" edited by kajal 20th april, 2017 #1908 -->
                </div>
                <div style=" float: left !important;  width: 500px !important ; ">
                    <p style=" font-family: Arial; font-size: 22pt;margin: 10px 10px 10px 5px !important; ">{!CompanyInfo.CompanyName}</p><!-- margin: 10px !important; edited by kajal 20th april, 2017 #1908 -->
                    <p style=" margin: 5px !important; font-family: Arial;font-size: 12pt;">{!CompanyInfo.Address1} {!CompanyInfo.Address2}</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt;">{!CompanyInfo.City} , {!CompanyInfo.State} , {!CompanyInfo.PostalCode} </p>
                    <p style=" margin: 5px !important; font-family: Arial;font-size: 12pt;">{!CompanyInfo.BusinessPhone}&nbsp; &nbsp;{!CompanyInfo.BusinessEmail}</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt;"> Tax ID:{!CompanyInfo.TaxId}  </p>
                </div>
                <div style=" float: right !important;width: 160px !important ;">
                    <p style = "letter-spacing: 5px !important;font-family: Arial;font-size: 22pt; margin:10px auto 0 auto;"> V E N D O R  R E T U R N </p>
                    <p style = "text-align: right; margin-top: 2px;">Page <span class="pagenumber"></span> of <span class="pagecount"></span></p>
                </div>
            </div>
            <div style="float: left !important; width :1000px !important; height: 180px; margin-top: 41.4px;"><!-- margin-top added by kajal 20th april, 2017 #1908 -->
                <div style="float: left !important; width :500px !important; ">
                    <p style="color: #000 !important; background: #FFF !important; padding: 7px 0 7px 5px; margin: 0px;  letter-spacing: 20px;font-family: Arial;font-size: 12pt; padding-left: 20px; border-bottom : solid black;font-weight: bold; border-bottom-width : 3px">R E T U R N E D &nbsp;&nbsp; T O</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt; padding-left: 15px; font-weight:bold"><apex:outputPanel rendered="{!vendorRec.VendorName != null}">{!vendorRec.VendorName}</apex:outputPanel></p>
                    <p style="margin: 5px !important;font-family: Arial;font-size: 12pt; padding-left: 15px;">{!vendorRec.BillingStreet1}</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt; padding-left: 15px;" >{!vendorRec.BillingStreet2}</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt; padding-left: 15px;">{!vendorRec.BillingCity}<apex:outputPanel rendered="{!vendorRec.BillingCity!=null && vendorRec.BillingState != null}">,</apex:outputPanel>{!vendorRec.BillingState}</p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt; padding-left: 15px;">{!vendorRec.BillingCountry}<apex:outputPanel rendered="{!vendorRec.BillingCountry!=null && vendorRec.BillingPostalCode != null}">,</apex:outputPanel> {!vendorRec.BillingPostalCode} </p>
                    <p style="margin: 5px !important; font-family: Arial;font-size: 12pt; padding-left: 15px;">
                       {!vendorRec.WorkNumber}  {!vendorRec.WorkEmail}</p>
                </div>
                <div style="float: right !important; width :320px !important;">
                    <p style = "padding: 5px !important;"><span  style=" float: left !important; width: 100px !important; font-family: Arial;font-size: 12pt; font-weight:bold ">Order #</span> <span style=" float: left !important; width: 200px !important; font-family: Arial;font-size: 12pt;" >{!returnVOHeaderRec.Name}</span></p>
                    <p style = "padding: 5px !important;"><span  style=" float: left !important; width: 100px !important; font-family: Arial;font-size: 12pt; font-weight:bold">Date</span> <span style=" float: left !important; width: 200px !important; font-family: Arial;font-size: 12pt;"  >{!returnVOHeaderRec.CreatedDate}</span></p>
                    <p style = "padding: 5px !important;"><span  style=" float: left !important; width: 100px !important; font-family: Arial;font-size: 12pt; font-weight:bold">Ordered By</span> <span style=" float: left !important; width: 200px !important;font-family: Arial;font-size: 12pt; "  >{!returnVOHeaderRec.OwnerName}</span></p>
                </div>
            </div>
            <div style="float: left !important; width :1000px !important; background: #FFF !important;border-bottom :3px solid black !important;font-weight: bold !important;">
                <p style="color: #000 !important; padding: 7px 0 7px 5px; margin: 0px; font-family: Arial;font-size: 12pt; height: 20px;">
                    <span style="padding-left: 15px; float: left;">R E T U R N E D &nbsp;&nbsp;I T E M S</span>
                    <span style="padding-right: 15px; float: right; font-weight: bold;">
                        <apex:outPutText value="{0, number, currency}" >
                            <apex:param value="{!returnVOHeaderRec.Total}" />
                        </apex:outPutText> 
                    </span>                
                </p>
            </div>
            <div style="float: left !important; width :1000px !important;">
                <table >
                    <col width="100px" /> 
                    <col width="400px" />
                    <col width="150px" />
                    <col width="50px" />
                    <col width="100px" />
                    <col width="200px" />
                    <thead>  
                        <tr>
                            <th style="font-family: Arial;font-size: 12pt; padding-left: 15px;">Type</th>
                            <th style="font-family: Arial;font-size: 12pt;">Item/Desc</th>
                            <th style="font-family: Arial;font-size: 12pt;text-align:center;">Return Qty</th>
                            <th></th>
                            <th style="font-family: Arial;font-size: 12pt; text-align: right;">Item Cost</th>
                            <th style="font-family: Arial;font-size: 12pt; text-align: right; padding-right: 15px;">Total</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div id="content1" class="content" style="width :1000px !important;float: left !important;margin-top: 61.4px;"> <!-- float, margin-top added by kajal 20th april, 2017 #1908 -->
            <table style="font-family: Arial;font-size: 25px;" >
                <col width="100px" />
                <col width="400px" />
                <col width="150px" />
                <col width="50px" />
                <col width="100px" />
                <col width="200px" />
                <tbody style="font-size :16px;">
                    <apex:repeat value="{!returnVOHeaderRec.ReturnVOLIList}" var="vroliGroupItem">
                        <tr style="font-family: Arial;font-size: 12pt;">
                            <td style= "padding-left: 17px;">
                                <apex:outputPanel >Part</apex:outputPanel>
                            </td>
                            <td>{!vroliGroupItem.Description}</td>
                            <td style="text-align:center;">
                                <apex:outputText value="{0, number, ###}" >
                                    <apex:param value="{!vroliGroupItem.ReturnQty}"/>
                                </apex:outputText>
                            </td>
                            <td style="text-align: right;">@</td>
                            <td style="text-align: right;">
                                <apex:outPutText value="{0, number, currency}" >
                                    <apex:param value="{!vroliGroupItem.ItemCost}" />
                                </apex:outPutText>
                            </td>
                            <td style="text-align: right; padding-right: 15px;"> 
                                <apex:outPutText value="{0, number, currency}" >
                                    <apex:param value="{!vroliGroupItem.ReturnQty * vroliGroupItem.ItemCost}" />
                                </apex:outPutText>
                            </td>
                        </tr>
                    </apex:repeat>
                </tbody>
            </table>
        </div>
        <div style="width:250px;float:right">
            <div style="width:100%;margin-top:50px;display: inline-block;float: left;">
                <label style="width:120px;font-weight:bold; margin-right:20px;float: left;">SUB TOTAL</label>
                <span style="width:85px;text-align: right;font-weight:bold;float: left;"> 
                 <apex:outPutText value="{0, number, currency}" >
                                    <apex:param value="{!returnVOHeaderRec.subtotal}" />
                  </apex:outPutText>
               </span>
            </div>
            <div style="width:100%;display: inline-block;margin-top:10px;float: left;">
                <label style="width:120px; margin-right:20px;float: left;">TAXES</label>
                <span style="width:85px;text-align:right;float: left;"> 
                    <apex:outPutText value="{0, number, currency}" >
                                    <apex:param value="{!returnVOHeaderRec.tax}" />
                      </apex:outPutText>
                </span>
            </div>
            <div style="width:100%;display: inline-block; margin-top:10px;float: left;">
                <label style="width:120px;font-weight:bold; margin-right:20px;float: left;">TOTAL</label>
                <span style="width:85px;text-align: right;font-weight:bold;float: left;">
                   <apex:outPutText value="{0, number, currency}" >
                                    <apex:param value="{!returnVOHeaderRec.total}" />
                  </apex:outPutText>
               </span>
            </div>
           </div>
           
       </body>        
    </html>
</apex:page>