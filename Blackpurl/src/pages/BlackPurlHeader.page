<apex:page controller="BlackPurlHeaderCtrl" id="BlackPurlHeader"
			showHeader="false" sidebar="false" standardStylesheets="false">
	
	<style>
		#headerButton{
			margin-right : 3%;
			float: right; /* Added by richa */
		}
		
		#headerButton a {
		    float: left;
		    width: 6em;
		    text-decoration: none;
		    color: white;
		    background-color: RGB(181, 151, 181);
		    padding: 0.2em 0.6em;
		    border-right: 1px solid white;
		    cursor: pointer;
		}
		
		#headerButton input[type="button"] {
			width: 100px;
			font-size: 15px;
			margin-top: 18px; /* Added by richa */
		}
		
		/* Added by richa */
		.topHeading {
			float: left;
			width: 88%;
		}
		
		.topHeadingContent {
			text-align: center;
			font-size: 15px;
			width: 75%;
			margin: 18px auto 0 auto;
		}
	</style>
	
	<!-- Start: Added by richa -->
	<div class="topHeading">
		<div class="topHeadingContent">
			<apex:outputPanel rendered="{!$CurrentPage.parameters.pageName == 'CategoryMgmt'}">
				<h3>Use this section to create, assign, and activate the categories for your business. 
					You can add a Fee, Internal Expense, Labour, Part, Sublet or Miscellaneous categoryâ€‹ mapping each one to your general ledger codes.</h3>
			</apex:outputPanel>
			
			<apex:outputPanel rendered="{!$CurrentPage.parameters.pageName == 'SystemSettings'}">
				<h3>Use this section to create and manage the price levels and sales taxes that apply to your business.</h3>
			</apex:outputPanel>
			
			<apex:outputPanel rendered="{!$CurrentPage.parameters.pageName == 'MakeMgmt'}">
				<h3>Use this section to add new makes and models to your business.</h3>
			</apex:outputPanel>
		</div>
		
	</div>
	<!-- End: Added by richa -->
	<div id="headerButton">
