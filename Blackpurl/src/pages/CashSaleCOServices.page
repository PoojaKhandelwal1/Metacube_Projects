    define(['Routing_AppJs_PK'], function (Routing_AppJs_PK) {
        Routing_AppJs_PK.factory('CashSaleCOService', ['$q',
         function ($q) {
            return {
                getCOHeaderDetails: function(coHeaderId){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.getCOHeaderDetails}', coHeaderId);
                },
                insertFeeInQuickCashSale: function(lineItemId , coHeaderId){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.insertFeeInQuickCashSale}', lineItemId , coHeaderId);
                },
                saveLineItemInQuickCashSale: function(coHeaderId, MerchendiseLineItem){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.saveLineItemInQuickCashSale}', coHeaderId, MerchendiseLineItem);
                },
                editLineItemDesc: function(coHeaderId, MerchendiseLineItem){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.updateLineItemDescInQuickCashSale}', coHeaderId, MerchendiseLineItem);
                },
                removeLineItemsInMerchGrid: function(lineItemId, coHeaderId){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.removeLineItemsInMerchGrid}', lineItemId, coHeaderId);
                },
                AddPayment: function(PaymentModel){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.saveCOInvoicePayment}', PaymentModel);
                },
                finalizeQuickSale: function(checkOutItems, coHeaderId, checkoutMode){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.finalizeQuickSale}', checkOutItems, coHeaderId, checkoutMode);
                },
                updateCustomerInQCS: function(coHeaderId, customerId){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.addCustomer}', coHeaderId, customerId);
                },
                customerInfo: function(customerId){
                    return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.getRecordById}', customerId);
                },
                getCheckoutSalesTax: function(coInvoiceId){
	           		return RemoteActionService($q, '{!$RemoteAction.CustomerOrderCtrl.getCheckoutSalesTax}', coInvoiceId);
	           	}
            };
        }]);  
        
        return Routing_AppJs_PK;
    }); 
