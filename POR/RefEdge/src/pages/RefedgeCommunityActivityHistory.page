<apex:page id="pageId" sidebar="false">
    <div ng-show="showActivityHistory">
        <div id="modalPopup" class="slds-modal slds-fade-in-open slds-modal--large" aria-hidden="false" role="dialog">
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <button class="slds-button slds-button--icon-inverse slds-modal__close" ng-click="showActivityHistory = false">
                        <img id="close-Image" src="{!URLFOR($Resource.LightningCSS, '/assets/icons/action/close_120.png')}" alt="close" height="20" width="20"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 class="slds-text-heading--medium">{!$Label.Activity_History}</h2>
                </div>
                <div class="slds-modal__content slds-p-around--medium slds-scrollable--y">
                    <div>
                        <div id="outer-block" class="slds-p-horizontal--medium">
                            <div class="slds-form-element slds-m-vertical--medium">
                                <span class="slds-form-element__label">{!$Label.Your_Lifetime_points}</span>
                                <div class="slds-form-element__control">
                                    <span class="slds-form-element__static">{{lifetimePoints}}</span>
                                </div>
                            </div>
                            <div class="slds-form-element slds-m-vertical--medium">
                                <span class="slds-form-element__label">{!$Label.Current_Available_Points}</span>
                                <div class="slds-form-element__control">
                                    <span class="slds-form-element__static">{{avaliablePoints}}</span>
                                </div>
                            </div>
                            
                            <span class="slds-form-element__label slds-m-vertical--small" ng-if="contactReqList.length">
                                {!$Label.Your_Activities}
                            </span>
                            
                            <table class="slds-table slds-table--bordered slds-max-medium-table--stacked" ng-if="contactReqList.length">
                                <thead>
                                    <tr class="slds-text-heading--label">
                                        <th class="slds-cell-shrink" scope="col">
                                            <div class="slds-truncate">{!$Label.Date}</div>
                                        </th>
                                        <th scope="col">
                                            <div class="slds-truncate">{!$Label.Type}</div>
                                        </th>
                                        <th scope="col">
                                            <div class="slds-truncate">{!$Label.Prospective_Customer}</div>
                                        </th>
                                        <th scope="col">
                                            <div class="slds-truncate">{!$Label.Outcome}</div>
                                        </th>
                                        <th scope="col">
                                            <div class="slds-truncate">{!$Label.Points}</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="cr in contactReqList" class="slds-hint-parent">
                                        <td class="slds-truncate" data-label="{!$Label.Date}">
                                            <span>
                                                {{cr.dateValue}}
                                            </span>
                                        </td>
                                        <td class="slds-truncate" data-label="{!$Label.Type}">
                                            <span>
                                                {{cr.typeValue}}
                                            </span>
                                        </td>
                                        <td class="slds-truncate" data-label="{!$Label.Prospective_Customer}">
                                            <span>
                                                {{cr.prospectiveCustomer}}
                                            </span>
                                        </td>
                                        <td class="slds-truncate" data-label="{!$Label.Outcome}">
                                            <span>
                                                {{cr.outcome}}
                                            </span>
                                        </td>
                                        <td class="slds-truncate" data-label="{!$Label.Points}">
                                            <span>
                                                {{cr.points}}
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="slds-modal__footer">
                    <a ng-click="showActivityHistory = false" class="slds-button slds-button--brand">{!$Label.Ok}</a>
                </div>
            </div>
        </div>
        <div id="modalBg" class="slds-backdrop slds-backdrop--open"></div>
    </div>
</apex:page>