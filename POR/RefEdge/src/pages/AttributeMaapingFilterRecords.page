<apex:page standardController="Attribute_Mapping__c" extensions="AttributeMaapingFilterRecordsExtension" sidebar="false" lightningStylesheets="true" showHeader="false" standardStylesheets="true" applyHtmlTag="true" applyBodyTag="false" docType="html-5.0"> 
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" /> 
    <apex:form rendered="{!isFullLicenseAccessible}">  
        <apex:pageBlock id="pbId">
            <apex:pageBlockTable value="{!FilterCriterianList}" var="filterCriterianRecord" rendered="{!FilterCriterianList.size > 0}">
                <apex:column headerValue="{!$Label.T_Field}">
                    <apex:outputText value="{!filterCriterianRecord.FieldLabel}"/> 
                </apex:column> 
                <apex:column headerValue="{!$Label.Operator}">
                   <apex:outputText value="{!filterCriterianRecord.Operator}"/> 
                </apex:column>
                <apex:column headerValue="{!$Label.Value}">
                   <apex:commandLink rendered="{!filterCriterianRecord.FieldDataType = 'ID'}" value="{!filterCriterianRecord.FieldValue}" onclick="window.open('/{!filterCriterianRecord.FieldValue}')"/>
                   <apex:outputText rendered="{!filterCriterianRecord.FieldDataType != 'ID'}" value="{!filterCriterianRecord.FieldValue}"/> 
                </apex:column>
            </apex:pageBlockTable>
            <apex:pageMessage severity="Info" strength="2" summary="{!$Label.No_Records_Found}" rendered="{!FilterCriterianList.size <=0}"/> 
        </apex:pageBlock>
    </apex:form>
</apex:page>