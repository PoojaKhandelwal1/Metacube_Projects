<apex:page standardController="Opportunity"  sidebar="false" id="pageId" extensions="AllOpportunitysARandURController" standardStylesheets="true" showHeader="false" applyHtmlTag="true" applyBodyTag="false" docType="html-5.0">
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!AND(NOT(isFullLicenseAccessible), !isSLDS)}" />
    <apex:outputPanel rendered="{!isFullLicenseAccessible}">
    <apex:form rendered="{!!isSLDS}">
        <apex:pageblock >
            <apex:pageMessage severity="Info" strength="2" summary="{!$Label.No_Request_Found}" rendered="{!requestList.size <=0}"/>  
            <apex:pageBlockTable value="{!requestList}" var="refreq" rendered="{!requestList.size > 0}">
                <apex:column >
                    <apex:facet name="header">
                        {!$Label.All_Reference_Requests}
                    </apex:facet>
                    <span style="color: #000;font-size: 12px;font-weight: bold;">
                        {!refreq.request.Name}
                    </span>
                    <apex:outputPanel rendered="{!AND(refreq.accReqs != null,refreq.accReqs.size > 0)}">
                        <table cellpadding="1" class="list" cellspacing="1" width="100%" border="1" style="border-collapse:collapse;
                                            border-spacing:1px">
                            <tr class="headerRow">
                                <td width="100px">{!$Label.Account} &nbsp;</td>
                                <td width="120px">{!$Label.Reference_Type_Needed} &nbsp;</td>
                                <td width="100px">{!$Label.Owner} &nbsp;</td>
                                <td width="80px">{!$Label.Deadline} &nbsp;</td>
                                <td width="90px">{!$ObjectType.Reference_Request_Account__c.fields.Managed_Request__c.Label} &nbsp;</td>
                                <td width="100px">{!$ObjectType.Reference_Request_Account__c.fields.Approval_Status__c.Label} &nbsp;</td>
                                <td width="120px">{!$ObjectType.Reference_Request_Account__c.fields.Account_Request_Status__c.Label} &nbsp;</td>
                                <apex:outputPanel rendered="{!!isSalesUser}"><td width="100px">{!$Label.Details} &nbsp;</td></apex:outputPanel>
                            </tr>
                            <apex:repeat value="{!refreq.accReqs}" var="accreq" >
                                <tr class="dataRow" onmouseover="if (window.hiOn){hiOn(this);}" onmouseout="if (window.hiOff){hiOff(this);}">
                                    <td width="100px">
                                        <apex:commandLink value="{!accreq.rra.Account__r.Name}" onclick="window.open('/{!JSENCODE(accreq.rra.Account__c)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!accreq.rra.Account__r.Name}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="120px">
                                        <apex:commandLink value="{!accreq.rra.Reference_Type_Needed__r.Name}" onclick="window.open('/{!JSENCODE(accreq.rra.Reference_Type_Needed__c)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!accreq.rra.Reference_Type_Needed__r.Name}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="100px">
                                        <apex:commandLink value="{!accreq.OwnerName}" onclick="window.open('/setup/own/groupdetail.jsp?id={!JSENCODE(accreq.Owner)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!accreq.OwnerName}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="80px">
                                        <apex:outputField value="{!accreq.rra.Deadline__c}"/>
                                    </td>
                                    <td width="90px">
                                        <apex:outputField value="{!accreq.rra.Managed_Request__c}"/>
                                    </td>
                                    <td width="100px">
                                        <apex:outputField value="{!accreq.rra.Approval_Status__c}"/>
                                    </td>
                                    <td width="120px">
                                        <apex:outputField value="{!accreq.rra.Account_Request_Status__c}"/>
                                    </td>
                                    <apex:outputPanel rendered="{!!isSalesUser}">
                                        <td width="100px">
                                            <apex:commandLink value="{!$Label.Details}" onclick="window.open('/{!JSENCODE(accreq.rra.Id)}');return false;"/>
                                        </td>
                                    </apex:outputPanel>
                                </tr>
                            </apex:repeat>
                        </table>
                    </apex:outputPanel>
                    
                    <apex:outputPanel rendered="{!AND(refreq.unspReqs != null,refreq.unspReqs.size > 0)}">
                        <table cellpadding="1" class="list" cellspacing="1" width="100%" border="1" style="border-collapse:collapse;border-spacing:1px">
                            <tr class="headerRow">
                                <td width="100px">{!$Label.Account} &nbsp;</td>
                                <td width="120px">{!$Label.Reference_Type_Needed} &nbsp;</td>
                                <td width="100px">{!$Label.Owner} &nbsp;</td>
                                <td width="80px">{!$Label.Deadline} &nbsp;</td>
                                <td width="90px"> &nbsp;</td>
                                <td width="100px"> &nbsp;</td>
                                <td width="120px">{!$ObjectType.Unspecified_Request__c.fields.Unspecified_Request_Status__c.Label} &nbsp;</td>
                                <apex:outputPanel rendered="{!!isSalesUser}"><td width="100px">{!$Label.Details} &nbsp;</td></apex:outputPanel>
                            </tr>
                            <apex:repeat value="{!refreq.unspReqs}" var="unreq">
                                <tr class="dataRow" onmouseover="if (window.hiOn){hiOn(this);}" onmouseout="if (window.hiOff){hiOff(this);}">
                                    <td width="100px">
                                        <apex:commandLink value="{!unreq.unspReq.Specified_Account__r.Name}" onclick="window.open('/{!JSENCODE(unreq.unspReq.Specified_Account__c)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!unreq.unspReq.Specified_Account__r.Name}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="120px">
                                        <apex:commandLink value="{!unreq.unspReq.Reference_Type_Needed__r.Name}" onclick="window.open('/{!JSENCODE(unreq.unspReq.Reference_Type_Needed__c)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!unreq.unspReq.Reference_Type_Needed__r.Name}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="100px">
                                        <apex:commandLink value="{!unreq.OwnerName}" onclick="window.open('/setup/own/groupdetail.jsp?id={!JSENCODE(unreq.Owner)}');return false;" rendered="{!!isSalesUser}"/>
                                        <apex:outputText value="{!unreq.OwnerName}" rendered="{!isSalesUser}"/>
                                    </td>
                                    <td width="80px">
                                        <apex:outputField value="{!unreq.unspReq.Deadline__c}"/>
                                    </td>
                                    <td width="90px">
                                        <apex:outputText value="      "/>
                                    </td>
                                    <td width="100px">
                                        <apex:outputText value="      "/>
                                    </td>
                                    <td width="120px">
                                        <apex:outputField value="{!unreq.unspReq.Unspecified_Request_Status__c}"/>
                                    </td>
                                    <apex:outputPanel rendered="{!!isSalesUser}">
                                        <td width="100px" rendered="{!!isSalesUser}">
                                            <apex:commandLink value="{!$Label.Details}" onclick="window.open('/{!JSENCODE(unreq.unspReq.Id)}');return false;"/>
                                        </td>
                                    </apex:outputPanel>
                                </tr>
                            </apex:repeat>
                        </table>
                    </apex:outputPanel>
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageblock>
    </apex:form>
    </apex:outputPanel>
    <apex:include pageName="AllOpportunitysARandURSLDS" rendered="{!isSLDS}"/>
</apex:page>