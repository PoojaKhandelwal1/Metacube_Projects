<apex:page standardController="Microsite__c" extensions="MicrositeDetailPageController" sidebar="false" lightningStylesheets="true">
    <style>
		div.cke_dialog_background_cover {
			opacity: 1 !important; 
			background-color: rgba(126, 140, 153, 0.8) !important; 
		}
	</style>
    <!-- Messages -->
    <apex:pageMessages id="pgmsgId"/>
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" />
    
    <!-- Add POR_ModalLoader Component-->
    <c:POR_ModalLoader id="PORLoader"/>
    <apex:stylesheet value="{!URLFOR($Resource.JqueryFiles, 'colorpicker.css')}"/>
    <apex:includeScript value="{!URLFOR($Resource.JqueryFiles, 'colorpicker.js')}"/>
    <script>
             jQuery(document).ready(function(){
                    var componentId;
                    jQuery(".color").ColorPicker({
                    color: '#0000ff',
                    onShow: function (colpkr) {
                        componentId = jQuery(this).attr('class').split(' ')[1];
                        jQuery(colpkr).fadeIn(500);
                        return false;
                    },
                    onHide: function (colpkr) {
                        jQuery(colpkr).fadeOut(500);
                        return false;
                    },
                    onChange: function (hsb, hex, rgb) {
                        jQuery("."+componentId).css('background-color', '#' + hex);
                        jQuery("."+componentId).attr('value','#' + hex);
                    }
                });
                
            });
         
    </script>
    <apex:form id="frmId" rendered="{!isFullLicenseAccessible}">
        <apex:pageBlock id="pbId" mode="edit">
            <apex:pageBlockButtons >
                <apex:commandButton value="{!$Label.Save}" action="{!save}"/>
                <apex:commandButton value="{!$Label.Cancel}" action="{!cancel}"/>
                
            </apex:pageBlockButtons>
            <apex:pageBlockSection id="sectionId" columns="1" title="{!$Label.Banner_Settings}">
                <apex:inputField value="{!Microsite__c.Name}"/>
                <apex:inputField value="{!Microsite__c.Banner_image__c}"/>
                <apex:inputField value="{!Microsite__c.Image_Alignment__c}"/>
                <!-- added for #611 -->
                <apex:inputField styleClass="color headerBGColor" style="background-color: {!Microsite__c.Header_Background_Color__c}" value="{!Microsite__c.Header_Background_Color__c}" />
                <apex:inputField value="{!Microsite__c.Header_Copy__c}"/>
                <apex:inputField value="{!Microsite__c.Header_Copy_Alignment__c}"/>
                <apex:inputField styleClass="color headerCopy" style="background-color : {!Microsite__c.Header_Copy_Color__c}" value="{!Microsite__c.Header_Copy_Color__c}"/>
                <apex:inputField value="{!Microsite__c.Header_Copy_Size__c}"/>
                <apex:inputField value="{!Microsite__c.Sub_header_Copy__c}"/>
                <apex:inputField value="{!Microsite__c.Sub_Header_Copy_Alignment__c}"/>
                <apex:inputField styleClass="color subheaderCopy" style="background-color : {!Microsite__c.Sub_Header_Copy_Color__c}" value="{!Microsite__c.Sub_Header_Copy_Color__c}"/>
                <apex:inputField value="{!Microsite__c.Sub_Header_Copy_Size__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection columns="1" title="{!$Label.Page_and_Body_Settings}">
                <apex:inputField styleClass="color pageColor" style="background-color : {!Microsite__c.Page_Color__c}" value="{!Microsite__c.Page_Color__c}"/>
                <apex:inputField value="{!Microsite__c.Document_Title_Color__c}" styleClass="color documentColor" style="background-color : {!Microsite__c.Document_Title_Color__c}"/>
                <apex:inputField value="{!Microsite__c.Language__c}"/>
                <apex:inputField value="{!Microsite__c.Share_Link_Copy__c}"/>
                <apex:inputField value="{!Microsite__c.Rate_Link_Copy__c}"/>
            </apex:pageBlockSection>    
            <apex:pageBlockSection columns="1" title="{!$Label.Footer_Settings}">
                <apex:inputField value="{!Microsite__c.Footer_Copy__c}"/>
                <apex:inputField value="{!Microsite__c.Footer_Link__c}"/>
                <apex:inputField value="{!Microsite__c.Footer_Copy_Alignment__c}"/>
                <apex:inputField styleClass="color FooterCopy" style="background-color : {!Microsite__c.Footer_Copy_Color__c}" value="{!Microsite__c.Footer_Copy_Color__c}"/>
                <apex:inputField value="{!Microsite__c.Footer_Copy_Size__c}"/>
                <apex:inputField value="{!Microsite__c.Available_for_Use__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>