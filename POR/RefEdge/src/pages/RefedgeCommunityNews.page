<apex:page id="pageId">
    <div ng-show="showNews" >
        <div id="modelNews" aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open" >
            <div class="slds-modal__container">
               <div class="slds-modal__header">
                    <button class="slds-button slds-button--icon-inverse slds-modal__close" ng-click="showNews = false">
                        <img id="close-Image" src="{!URLFOR($Resource.LightningCSS, '/assets/icons/action/close_120.png')}" alt="close" height="20" width="20"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 class="slds-text-heading--medium">{!$Label.News}</h2>
                </div>
                <div class="slds-modal__content slds-p-around--medium slds-scrollable--y">
                    <div class="panel-group" id="accordion">
                        <div class="panel panel-default" ng-repeat="(newsId,newsObj) in news">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <span class="pull-left clickable"></span>
                                    <a data-toggle="collapse" id="{{newsId+'_a'}}" class="collapsed" data-parent="#accordion" href="#{{newsId}}"><i class="fa fa-plus"></i><i class="fa fa-minus"></i>&nbsp;{{newsObj.newaName}}</a>
                                </h4>
                            </div>
                            <div id="{{newsId}}" class="panel-collapse collapse">
                                <div class="panel-body">{{newsObj.newsBody}}</div>
                            </div>
                        </div>  
                    </div> 
                    <apex:includeScript value="{!URLFOR($Resource.BootstrapFiles,'bootstrap.js')}"/>
                </div>
                <div class="slds-modal__footer">
                    <a ng-click="showNews = false" class="slds-button slds-button--neutral">{!$Label.Ok}</a>
                </div>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
    </div>
</apex:page>