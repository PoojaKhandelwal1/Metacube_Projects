                        </svg>
                    </div>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="{!$Label.Community_Image}"/>
                    <apex:image style="border: 1px solid rgba(128, 128, 128, 0.63);" width="380" height="140" value="{!URLFOR($Action.Attachment.Download, communityReferencTypeImage)}" rendered="{!communityReferencTypeImage != null}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="{!$Label.Post}" onclick="showPostCommunityPopup();return false;"/>
                <apex:commandButton value="{!$Label.Cancel}" action="{!backToSearch}"/>
