<apex:page showHeader="false" sidebar="false">
    <apex:form >
        <script language="javascript" >
        window.onload = function() {
		  var vars = {};
			var data = 'try';
			window.location.href.replace( location.hash, '' ).replace( 
				/[?&]+([^=&]+)=?([^&]*)?/gi, // regexp
				function( m, key, value ) { // callback
					vars[key] = value !== undefined ? value : '';
				}
			);
			data =  vars['toshow'] ? vars['toshow'] : null;
			
			if (data == 'account') {
				location.href = '{!URLFOR($Resource.RFSearchHelp, "RFSearchHelp/RFSearchHelpAccount.html")}';
			} else if (data == 'content') {
				location.href = '{!URLFOR($Resource.RFSearchHelp, "RFSearchHelp/RFSearchContent.html")}';
			} else if (data == 'filter') {
				location.href = '{!URLFOR($Resource.RFSearchHelp, "RFSearchHelp/RFSearchHelpFilter.html")}';
			} else if (data == 'invitation') {
				location.href = '{!URLFOR($Resource.RFSearchHelp, "RFSearchHelp/Invitation.html")}';
			} else {
				location.href = '{!URLFOR($Resource.RFSearchHelp, "RFSearchHelp/RFSearchHelpAll.html")}';
			}
		};
        </script>
    </apex:form>
</apex:page>