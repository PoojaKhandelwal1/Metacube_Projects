<apex:page id="pgId" standardController="Reference_Note__c" extensions="ReferenceNoteDetailController" sidebar="false" applyHtmlTag="true" applyBodyTag="false" docType="html-5.0"> 
    <apex:outputPanel rendered="{!!isSLDS}">
        <!-- Messages -->
        <apex:pageMessages id="pgmsgId"/>
        <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" />
        <apex:outPutPanel id="scriptPanel">
            <script>
                function deletejs() {
                    var responce = confirm('{!$Label.AreYouSure}');
                    if (responce == true) {
                        deleteaf();
                    } else {
                        return false;
                    }
                }
            </script>
        </apex:outPutPanel>
        <!-- Form -->
        <apex:form id="frmId" rendered="{!isFullLicenseAccessible}">
        <apex:actionFunction name="deleteaf" action="{!delete}" reRender="frmId,pgmsgId">
        </apex:actionFunction>
        <apex:sectionHeader title="{!$Label.Reference_Note}" subtitle="{!refNote.Name}"/>
            <apex:pageBlock id="pbId" title="{!$Label.Reference_Note_Detail}">
                <apex:pageBlockSection id="pbsId" columns="1" >
                    <apex:outputField value="{!refNote.Note_Date__c}" />
                    <apex:outputField value="{!refNote.Account__c}" rendered="{!NOT(ISBLANK(refNote.Account__c))}"/>
                    <apex:outputField value="{!refNote.Contact__c}" rendered="{!NOT(ISBLANK(refNote.Contact__c))}"/>
                    <apex:outputField value="{!refNote.Reference_Content__c}" rendered="{!NOT(ISBLANK(refNote.Reference_Content__c))}"/>
                    <apex:outputField value="{!refNote.Reference_Request__c}" rendered="{!NOT(ISBLANK(refNote.Reference_Request__c))}"/>
                    <apex:outputField value="{!refNote.Account_Request__c}" rendered="{!NOT(ISBLANK(refNote.Account_Request__c))}"/>
                    <apex:outputField value="{!refNote.Unspecified_Request__c}" rendered="{!NOT(ISBLANK(refNote.Unspecified_Request__c))}"/>
                    <apex:outputField value="{!refNote.Nomination__c}" rendered="{!NOT(ISBLANK(refNote.Nomination__c))}"/>
                    <apex:outputField value="{!refNote.Note__c}" />
                </apex:pageBlockSection>
                
                <apex:pageBlockButtons id="pbbId">
                    <apex:commandButton value="{!$Label.Edit}" action="{!edit}"/>
                    <apex:commandButton value="{!$Label.Delete}" onclick="deletejs(); return false;"/>
                </apex:pageBlockButtons>
            </apex:pageblock>
        </apex:form>
    </apex:outputPanel>
    <apex:include pageName="ReferenceNoteDetailPageSLDS" rendered="{!isSLDS}"/>
</apex:page>