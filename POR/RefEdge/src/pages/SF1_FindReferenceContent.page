<apex:page standardController="Opportunity" sidebar="false" extensions="InlinePageNavigationController">
    <apex:includeScript value="/support/console/44.0/integration.js" />
    
    <script>
        function openRefSearchSubtab(result) {
            var primaryTabId = result.id;
            sforce.console.openSubtab(primaryTabId, '{!$Page.RfSearchLightning}?opportunityId={!Opportunity.Id}&forAccount=false&forContent=true&PreFilter=true&SF1=false', true, 'Ref Search', null, null, 'Ref Search');
        }

        if ((typeof sforce != 'undefined') && sforce != null && sforce.console.isInConsole()) {
            sforce.console.getEnclosingPrimaryTabId(openRefSearchSubtab);
        } else if ((typeof sforce != 'undefined') && sforce != null) {

            if (Object.keys(sforce)[0] == 'console' && Object.keys(sforce).length == 1) {
                window.open('{!$Page.RfSearchPage}?opportunityId={!Opportunity.Id}&forAccount=false&forContent=true&PreFilter=true&SF1=false', '_self');
            } else {

                if ({!isSF1}) {
                    sforce.one.navigateToURL('{!$Page.SF1_RfSearchPage}?opportunityId={!Opportunity.Id}&forAccount=false&forContent=true&SF1=true');
                }

                if ({!isSLDS}) {
                    sforce.one.navigateToURL('{!$Page.RfSearchLightning}?opportunityId={!Opportunity.Id}&forAccount=false&forContent=true&PreFilter=true&SF1=false');
                }
            }
        } else {
            window.open('{!$Page.RfSearchPage}?opportunityId={!Opportunity.Id}&forAccount=false&forContent=true&PreFilter=true&SF1=false', '_self');
        }
    </script>
</apex:page>