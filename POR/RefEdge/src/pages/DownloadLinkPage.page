<apex:page controller="DownloadLinkController" sidebar="false">
    <apex:pageMessages id="msgId"/>
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" />
    
    <apex:form rendered="{!isFullLicenseAccessible}">
        <apex:actionFunction name="updateContentDownloadCount" action="{!updateContentDownloadCount}" reRender="msgId" oncomplete="downloadContent(); return false;">
            <apex:param name="contentId" assignTo="{!selectedRefContentId}" value=""/>
        </apex:actionFunction>
        <apex:actionFunction name="updateContentOpenCount" action="{!updateContentOpenCount}" reRender="msgId" oncomplete="openContentURL(); return false;">
            <apex:param name="contentId" assignTo="{!selectedRefContentId}" value=""/>
        </apex:actionFunction>
    </apex:form>
    
    <script>
    	
    	if ({!isPermissionGranted}) {
	    	
	    	if ({!isLinkTypeContent}) {
	    		updateContentOpenCount('{!$CurrentPage.parameters.Id}');
	    	} else {
	    		updateContentDownloadCount('{!$CurrentPage.parameters.Id}');
	    	}
    	}
        
        function downloadContent() {
			window.open('{!JSENCODE(baseUrl)}' + '/sfc/servlet.shepherd/version/download/' + '{!JSENCODE($CurrentPage.parameters.ContentId)}', '_self');
	        window.setTimeout(function() {
	        	window.parent.close();
        	}, 3000);
        }
        
        function openContentURL() {
        	var contentURL = '{!JSENCODE(contentURL)}';
        	
        	if (contentURL.indexOf('http') != -1 || contentURL.indexOf('https') != -1) {
	        	window.open(contentURL, '_self');
        	} else {
        		window.open('http://' + contentURL, '_self');
        	}
        }
    </script>
</apex:page>