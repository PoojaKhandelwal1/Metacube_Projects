<apex:page standardController="User" extensions="SalesUserProfileExtension" tabStyle="Reward__c" sidebar="false" showheader="true" lightningStylesheets="true">
    <apex:pageMessages id="pgmsgId" rendered="{!AND(IsPageAccessible,isFullLicenseAccessible)}"/>   
    <apex:pageMessage summary="{!$Label.Insufficient_Privileges}" strength="3" severity="Info" rendered="{!IF(isFullLicenseAccessible,NOT(IsPageAccessible),isFullLicenseAccessible)}" />
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" />
    
    <apex:pageBlock title="RefEdge User Profile Details" rendered="{!AND(IsPageAccessible,isFullLicenseAccessible)}">
        <apex:pageBlockSection >
            <apex:outputField value="{!userProfile.User__r.name}"/>
            <apex:outputField value="{!userProfile.User__r.email}"/>
            <apex:outputField value="{!userProfile.Lifetime_Points__c}"/>
            <apex:outputField value="{!userProfile.Available_Points__c}"/>           
        </apex:pageBlockSection>
        <br/>
        
        <apex:form >
            <apex:pageBlock title="User Points">            
                <apex:pageBlockTable value="{!rewardList}" var="reward" title="Rewards" rendered="{!rewardList.size > 0}">
                    <apex:column headerValue="Name">
                          <apex:outputLink value="/{!reward.Id}">{!reward.Name}</apex:outputLink>
                    </apex:column>
                    <apex:column value="{!reward.RewardDate__c}"/>
                    <apex:column value="{!reward.Referenceability_Type__c}"/> 
                    <apex:column value="{!reward.Transaction__c}"/>
                    <apex:column value="{!reward.Amount__c}"/>
                    <apex:column value="{!reward.Available_Points__c}"/>
                    <apex:column value="{!reward.Expired_Points__c}"/> 
                    <apex:column value="{!reward.Expiration_Date__c}"/>
                    <apex:column value="{!reward.Expired__c }"/> 
                </apex:pageBlockTable> 
                <apex:pageMessage severity="Info" strength="2" summary="{!$Label.No_Records_Found}" rendered="{!rewardList.size <=0}"/>
                <apex:pageBlockButtons >
                	<apex:commandButton value="Back" action="{!redirectToListPage}" reRender="none"/> 
                    <apex:commandButton value="Issue" action="{!redirectToIssue}" reRender="none"/>
                    <apex:commandButton value="Redeem" action="{!redirectToRedeem}" reRender="none"/>
                </apex:pageBlockButtons>           
            </apex:pageBlock>
        </apex:form>
    </apex:pageBlock>
</apex:page>