<apex:page showHeader="false" sidebar="false" controller="InvitationCoworkersLookupController" id="pgLookup" cache="true">
    <apex:pageMessages id="pgMsg"/>
    <apex:pageMessage summary="{!$Label.User_License}" strength="3" severity="Info" rendered="{!NOT(isFullLicenseAccessible)}" />
    <c:POR_ModalLoader id="loadingModalId"/>
    <style>
    	<!-- REF-1328 : Css changes for custom lookup Consistent Format-->
    	.bPageBlock {
		    border-top: 4px none #222;  
		}
    	.editPage {
    		border-top: 4px solid #222;
		}
		div#divButton {
		    border-bottom: 1px solid #dbdbdb; 
		    padding-top: 5px;
		    padding-bottom: 7px;
		}
    </style>
    <script>
        PORShowLoading();
        //return value to the calling window
        window.returnValue = null;
        var returnedArray = new Array();
        function callParent(userId, userEmail) {
            
            // Get the user agent string
            var deviceAgent = navigator.userAgent;
            var ios = deviceAgent.toLowerCase().match(/(iphone|ipod|ipad)/);
            var winMain = window.opener;
            
            if (null == winMain) {
                winMain = window.parent.opener;
            }
            winMain.closePopup(userId, userEmail); 
        }
        
        //related to #874
        function runScript(e, value) {
            
            if (e.keyCode == 13) {

                PORShowLoading();
               	goSearch();
                return false;
            }
        }
        
        jQuery(window).load(function() {
            PORHideLoading();
        });
    </script>
    
    <apex:form id="frmLookup" style="margin-left:1%" rendered="{!isFullLicenseAccessible}">
        <apex:sectionHeader id="shLookup" title="{!$Label.Lookup}"/>
        <apex:actionFunction name="goSearch" action="{!getUsers}" oncomplete="PORHideLoading();" reRender="pgMsg,pbLookup, opMessage"/>
        <apex:outputPanel >
            <apex:inputText id="searchText" value="{!searchText}" html-placeholder="{!$Label.Search}..." onkeyDown="return runScript(event, this.value);"/>&nbsp; 
            <apex:commandButton id="btnGo" value="{!$Label.Go}" action="{!getUsers}" rerender="pgMsg,pbLookup,opMessage"/>
            <br />
            <apex:outputLabel value="{!$Label.Lookup_search_message}" />
            <br />
            <br />
        </apex:outputPanel>
        
        <apex:outputPanel id="opMessage" >
            <apex:outputLabel style="color:#FF8C00;" value="{!$Label.Search_maximun_rows_message}"  rendered="{!listUsers.size > 200}"/>
        </apex:outputPanel>
        
        <apex:pageBlock id="pbLookup" mode="edit">
             <div id ="divButton" align="Center"> 
                <apex:commandButton value="{!$Label.Save}" action="{!save}" rendered="{!listUsers.size >0}" rerender="pgMsg" onComplete="javascript : callParent('{!JSENCODE(selectedUsersIds)}','{!JSENCODE(selectedUsersEmails)}');return false;"/>
             </div>
            <apex:pageBlockSection id="sectionId" columns="1">               
                <apex:pageBlockTable id="tableId" rendered="{!listUsers.size >0}" value="{!listUsers}" var="subItem">
                    <apex:column id="checkBoxColumn">
                        <apex:inputCheckBox id="checkBox" value="{!subItem.isSelected}"/>
                    </apex:column>
                    <apex:column headervalue="{!$Label.User_Name}">
                        <apex:outPutField value="{!subItem.u.Name}" />
                    </apex:column>
                    <apex:column headerValue="{!$Label.Email}">
                        <apex:outPutField value="{!subItem.u.Email}" />
                    </apex:column>
                </apex:pageBlockTable>
                
                <apex:pageBlockSectionItem rendered="{!listUsers.size = 0}" >
                    <apex:outputLabel style="color:red;" value="{!$Label.No_Records_Found}"></apex:outputLabel>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection> 
        </apex:pageBlock>
        
        <script>
            jQuery(".pageTitleIcon").attr("src","{!URLFOR($Resource.RESearchFilterIcons, 'search-icon.png')}");
            jQuery("body .bPageTitle .ptBody h1.noSecondHeader").attr("style","font-weight:bold");
        </script>
    </apex:form>
</apex:page>