<apex:page id="pageId">
    <div ng-show="showProfile">
        <div id="modalPopup" class="slds-modal slds-modal--large slds-fade-in-open" aria-hidden="false" role="dialog">
            <div class="slds-modal__container">
                <div class="slds-modal__header">
                    <button class="slds-button slds-button--icon-inverse slds-modal__close" ng-click="closeProfileModal()">
                        <img id="close-Image" src="{!URLFOR($Resource.LightningCSS, '/assets/icons/action/close_120.png')}" alt="close" height="20" width="20"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 class="slds-text-heading--medium">{!$Label.Profile}</h2>
                </div>
                <div class="slds-modal__content slds-scrollable--y">
                    <div>
                        <c:RefedgeCommunityProfileComponent />
                    </div>
                </div>
                <div class="slds-modal__footer">
                    <a ng-click="editContact()" ng-hide="isEditProfile" class="slds-button slds-button--neutral">{!$Label.Edit}</a>
                    <a ng-click="cancelContact()" ng-show="isEditProfile" class="slds-button slds-button--neutral">{!$Label.Cancel}</a>
                    <a ng-click="saveContact()" ng-show="isEditProfile" class="slds-button slds-button--brand">{!$Label.Save}</a>
                </div>
            </div>
        </div>
        <div id="modalBg" class="slds-backdrop slds-backdrop--open"></div>
    </div>
</apex:page>