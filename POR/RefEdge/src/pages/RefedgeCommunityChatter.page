<apex:page id="pageId">
	<div ng-show="showChatter">
	    <div id="modelChatter" aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open" >
	        <div class="slds-modal__container">
	           <div class="slds-modal__header">
	                <button class="slds-button slds-button--icon-inverse slds-modal__close" ng-click="showChatter = false">
	                    <img id="close-Image" src="{!URLFOR($Resource.LightningCSS, '/assets/icons/action/close_120.png')}" alt="close" height="20" width="20"/>
	                    <span class="slds-assistive-text">Close</span>
	                </button>
	                <h2 class="slds-text-heading--medium">{!$Label.Network_with_your_peers}</h2>
	            </div>
	            <div class="slds-modal__content slds-p-around--medium slds-scrollable--y">
	                <chatter:newsfeed />
	            </div>
	            <div class="slds-modal__footer">
	                <a ng-click="showChatter = false" class="slds-button slds-button--neutral">{!$Label.Ok}</a>
	            </div>
	        </div>
	    </div>
	    <div class="slds-backdrop slds-backdrop--open"></div>
	</div>
</apex:page>